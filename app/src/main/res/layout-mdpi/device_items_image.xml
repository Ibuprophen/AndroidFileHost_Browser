<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="?android:selectableItemBackground"
    card_view:cardElevation="1dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/deviceImage"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="70dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            tools:src="@drawable/device_image_placeholder" />

        <TextView
            android:id="@+id/mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/deviceImage"
            android:layout_toEndOf="@id/deviceImage"
            android:maxEms="6"
            android:minWidth="80dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="8dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Manufacturer" />

        <TextView
            android:id="@+id/dName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/mName"
            android:layout_toRightOf="@id/mName"
            android:gravity="end"
            android:paddingBottom="8dp"
            android:paddingEnd="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="20dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Device" />

    </RelativeLayout>

</android.support.v7.widget.CardView>